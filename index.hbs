<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="styles/styles.css">
</head>
<body>
    <div class="auth-container">
        <div id="login-area" class="auth-area">
            <h2>Login</h2>
            <form id="login-form">
                <input type="text" id="login-username" placeholder="Username" required />
                <input type="password" id="login-password" placeholder="Password" required />
                <button type="submit">Login</button>
            </form>
            <p>Don't have an account? <a href="#" onclick="showRegister()">Register</a></p>
        </div>
    
        <div id="register-area" class="auth-area" style="display:none;">
            <h2>Register</h2>
            <form id="register-form">
                <input type="text" id="register-username" placeholder="Username" required />
                <input type="password" id="register-password" placeholder="Password" required />
                <button type="submit">Register</button>
            </form>
            <p>Already have an account? <a href="#" onclick="showLogin()">Login</a></p>
        </div>
    </div>
    
    <div class="container">
        <div id="bookList-area" class="wrapper">
            <h2>Book List</h2>
            <table id="bookList-table">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Title</th>
                        <th>Authors</th>
                        <th>Cover</th> 
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div id="input-area" class="wrapper">
            <h2>Search for a book</h2>
            Enter book title:
            <input type="text" id="bookTitleTextField" />
            <button id="submit_button">Submit</button>
            <button id="save_cart_button" onclick="saveBookList()">Save Cart</button>
        </div>
        <div id="search-results-area" class="wrapper">
            <h2>Search Results</h2>
            <table id="search-results-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Authors</th>
                        <th>Cover</th>
                        <th>Add to List</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Search results will be added here -->
                </tbody>
            </table>
        </div>
    </div>
    <script src="js/script.js"></script>
</body>
</html>
